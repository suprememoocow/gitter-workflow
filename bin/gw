#!/usr/bin/env node

'use strict';

var argv = require('yargs')
  .option('token', {
    // alias: 't',
    describe: 'Access token',
    global: true,
    config: 'token'
  })
  .version(function() {
    return require('../package.json').version;
  })
  .commandDir('../commands')
  .demand(1)
  .help()
  .argv;
